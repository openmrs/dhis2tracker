<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>${project.parent.groupId}.${project.parent.artifactId}.api.Dhis2TrackerService</value>
                <ref bean="dhis2trackerService" />
			</list>
		</property>
	</bean>

    <bean name="dhis2trackerService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="${project.parent.groupId}.${project.parent.artifactId}.api.impl.Dhis2TrackerServiceImpl">
                <property name="dao" ref="dhis2trackerDAO" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <bean name="dhis2trackerDAO" class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernateDhis2TrackerDAO">
        <property name="sessionFactory">
            <ref bean="sessionFactory" />
        </property>
    </bean>
	
</beans>
